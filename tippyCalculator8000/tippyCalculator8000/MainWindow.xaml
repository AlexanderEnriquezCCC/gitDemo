<Window x:Class="tippyCalculator8000.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tippyCalculator8000"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="125*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="totalLabel" Content="What was the bill?" HorizontalAlignment="Left" Margin="7.75,50,0,0" VerticalAlignment="Top" Width="245" Height="28" FontFamily="OCR A Std" FontSize="18" Grid.Column="1"/>
        <TextBox x:Name="totalBox" HorizontalAlignment="Left" Height="28" Margin="252.75,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" Grid.Column="1"/>
        <Button x:Name="calculateBtn" Content="Calculate" HorizontalAlignment="Left" Margin="83.75,99,0,0" VerticalAlignment="Top" Width="300" Height="110" Click="calculateBtn_Click" Grid.Column="1" Background="#FFFFC4C4"/>
        <TextBlock x:Name="resultTxt" HorizontalAlignment="Left" Margin="83.75,251,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="130" Width="300" Grid.Column="1"/>

    </Grid>
</Window>
